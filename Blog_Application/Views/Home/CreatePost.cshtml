@model Blog_Application.Models.BlogPost

<div style="background: rgba(0, 0, 0, 0.7); padding: 30px; border-radius: 10px; color: white; max-width: 600px; margin: auto;">
    <h1 class="text-center">Add Post</h1>

    <hr />
    <div class="row">
        <div class="col-md-12">

            <form asp-action="CreatePost">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Id" class="control-label">Post ID</label>
                    <input asp-for="Id" class="form-control" placeholder="Enter post ID" required />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter post title" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Content" class="control-label">Content</label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="Enter post content" required></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DateCreated" class="control-label">Date Created</label>
                    <input asp-for="DateCreated" type="date" class="form-control" required />
                    <span asp-validation-for="DateCreated" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DateModified" class="control-label">Date Modified</label>
                    <input asp-for="DateModified" type="date" class="form-control" required />
                    <span asp-validation-for="DateModified" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Add Post" class="btn btn-outline-light" />
                </div>
            </form>

        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
    </div>
</div>
